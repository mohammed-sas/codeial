    <link rel="stylesheet" href="/css/home.css">
    <h1>Codeial <%= title %> </h1>

    <section id="feed-post">
        <h4>Posts</h4>

        <% if(locals.user) { %>
        <form action="/post/create" id="new-post-form" method="POST">
            <textarea name="content" cols="30" rows="10" placeholder="type here..." required></textarea>
            <input type="submit" value="Post">
        </form>
        <% } %>
    </section>

    <div id="post-list-div">
                <ul>
                        <% for(post of posts) { %>
                        <li>        
                                    <% if((locals.user) && (locals.user.id == post.user.id)) { %>
                                    <small><a href="/post/destroy/<%= post._id%>">Delete Post</a></small>
                                    <% }%>
                                    <%= post.content%>
                                    <br>
                                    <%= post.user.name%>
                                    <br>
                                    <%= post.createdAt%>

                                    <div class="post-comments">
                                        <% if(locals.user) {%>
                                        <form action="/comment/create" method="post">
                                            <input type="text" name="content" placeholder="type here to add comment..." required>
                                            <input type="hidden" name="post" value="<%= post._id%>">
                                            <input type="submit" value="Add Comment">
                                        </form>

                                        <%}%>

                                            <div class="post-comments-list">
                                            <ul id="post-comment-<%= post._id%>">
                                                
                                                    <% for (i of post.comment) {%>
                                                    <li>
                                                    <p>
                                                        <%= i.content%>
                                                        <br>
                                                        <small> <%= i.user.name%> </small>
                                                    </p>
                                                    <small><a href="/comment/destroy/<%=i._id%>">Delete Comment</a></small>

                                                    </li>
                                                    <% } %>
                                                
                               
                                            </ul>

                                            </div>
                                    </div>

                                    <% } %>
                        </li>
            </ul>

    </div>